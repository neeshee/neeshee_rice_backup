# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Roboto 12

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# colors
# class                border      background    text       indicator child_border
client.focused         "#ba4697"   "#ba4697"     "#002b36" "#ba4697" "#ba4697"

# start a terminal
bindsym Mod1+Return exec terminator

# kill focused window
bindsym Mod1+q kill

# see where focus is
bindsym Mod1+semicolon exec i3-msg border pixel 2 
bindsym --release Mod1+semicolon exec i3-msg border pixel 0

# no title bar
new_window pixel 0 

# brightness
bindsym Mod1+F5 exec xbacklight -dec 10
bindsym Mod1+F6 exec xbacklight -inc 10
bindsym Mod1+Mod4+F5 exec xbacklight -dec 1
bindsym Mod1+Mod4+F6 exec xbacklight -inc 1

# volume
bindsym Mod1+F1 exec amixer -D pulse sset Master 0 toggle
bindsym Mod1+F2 exec amixer -q sset Master 5%-
bindsym Mod1+F3 exec amixer -q sset Master 5%+

# screenshot
bindsym Mod1+F7 exec scrot

# lock
bindsym Mod1+Home exec lock

# autostart
exec --no-startup-id compton -c -b -f -c --vsync opengl
exec --no-startup-id lock
exec --no-startup-id xautolock -time 5 -locker lock -corners 0-00
exec --no-stautup-id udiskie -a -N -T -f ranger
exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/flowers.jpg
exec --no-startup-id xrandr --auto

# gaps
gaps inner 10
gaps outer 5
smart_borders on

# mod+d to start dmenu (a program launcher)
bindsym Mod1+d exec dmenu_run -fn "Roboto" -nb "#566376" -nf "#002b36" -sb "#b785a8"

# change focus
bindsym Mod1+Left focus left
bindsym Mod1+Down focus down
bindsym Mod1+Up focus up
bindsym Mod1+Right focus right

# move focused window
bindsym Mod1+Ctrl+Left move left
bindsym Mod1+Ctrl+Down move down
bindsym Mod1+Ctrl+Up move up
bindsym Mod1+Ctrl+Right move right

# split in horizontal orientation
bindsym Mod1+h split h

# split in vertical orientation
bindsym Mod1+v split v

# enter fullscreen mode for the focused container
bindsym Mod1+f fullscreen toggle

# move the currently focused window to the scratchpad
bindsym Mod1+Ctrl+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym Mod1+minus scratchpad show

# switch to workspace
bindsym Mod1+1 workspace 1; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/flowers.jpg
bindsym Mod1+2 workspace 2; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/white_flowers.jpg
bindsym Mod1+3 workspace 3; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/pink_flowers.jpg
bindsym Mod1+4 workspace 4; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/blue_flowers.jpg
bindsym Mod1+5 workspace 5; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/hi-res_space.jpg
bindsym Mod1+6 workspace 6; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/galaxy.jpg
bindsym Mod1+7 workspace 7; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/vertical_galaxy.jpg
bindsym Mod1+8 workspace 8; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/cloudy_mountainscape.jpg
bindsym Mod1+9 workspace 9
bindsym Mod1+0 workspace 10

# move focused container to workspace
bindsym Mod1+Ctrl+1 move container to workspace 1; workspace 1; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/flowers.jpg
bindsym Mod1+Ctrl+2 move container to workspace 2; workspace 2; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/white_flowers.jpg
bindsym Mod1+Ctrl+3 move container to workspace 3; workspace 3; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/pink_flowers.jpg
bindsym Mod1+Ctrl+4 move container to workspace 4; workspace 4; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/blue_flowers.jpg
bindsym Mod1+Ctrl+5 move container to workspace 5; workspace 5; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/hi-res_space.jpg
bindsym Mod1+Ctrl+6 move container to workspace 6; workspace 6; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/galaxy.jpg
bindsym Mod1+Ctrl+7 move container to workspace 7; workspace 7; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/vertical_glaxy.jpg
bindsym Mod1+Ctrl+8 move container to workspace 8; workspace 8; exec --no-startup-id feh --bg-scale ~/Pictures/Wallpapers/cloudy_mountanscape.jpg
bindsym Mod1+Ctrl+9 move container to workspace 9
bindsym Mod1+Ctrl+0 move container to workspace 10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym Mod1+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	font pango:Inconsolata for Powerline 11
	position top
	colors {
		focused_workspace "#7f70ba" "#a36fba" "#fcf0e0"
		urgent_workspace "#900000" "#d14f4d" "#002b36"
        }
	status_command /etc/bumblebee-status/bumblebee-status -m amixer brightness nic bluetooth memory disk:home cpu battery datetime -p home.path=/ datetime.format="%a, %b %d at %I:%M %p" -t flowers-theme
}

